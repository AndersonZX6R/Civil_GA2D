#ifndef Civil_Math
#define Civil_Math

#include "..\UtilsLibrary\CivilError.h"
#include "..\UtilsLibrary\CivilRange.h"

using namespace Civil::UTILS;

namespace Civil
{

namespace MATH
{

    typedef Range<0, 360> DegreesType;
	typedef Range<0, 59> MinutesType, SecondsType;

	struct Angle
	{
	public:

		Angle() :
			m_dblRadians(0)
        {}

	private:

		double
			m_dblRadians;
		DegreesType
			m_degrees;
		MinutesType
			m_minutes;
		SecondsType
			m_seconds;

		void calcRadians();
		void calcDegrees();

	public:

		DegreesType getDegrees() const
		{
            return m_degrees;
        }

		void operator=(double value)
		{
			m_dblRadians = value;
            calcDegrees();
		}
		operator double()
		{
            return m_dblRadians;
        }

	}; /* Angle */

} /* namespace Math */

} /* namespace Civil */

#endif
